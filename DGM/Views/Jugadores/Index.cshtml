@model IEnumerable<DGM.Models.Jugadore>

@{
    ViewData["Title"] = "Index";
}

<style>
    .card:hover {
        cursor: pointer;
        background: #f1f2f6;
    }
</style>

<h1 class="alert alert-primary">Jugadores</h1>

<p>
    <a class="btn btn-primary" asp-action="Create"><i class="fas fa-plus-square"></i> Create New</a>
</p>

<hr/>

<div class="row">

    @foreach (var item in Model)
    {
    <div class="col-4">
        <a asp-action="Details" asp-route-id="@item.IdJugadores" style="text-decoration: none; color: #000;">
            <div class="card mb-4">
                <div class="card-header text-center">
                    <p class="card-text font-weight-normal font-italic">@Html.DisplayFor(modelItem => item.Pasaporte)</p>
                </div>
                <div class="card-body text-center">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nombre) @Html.DisplayFor(modelItem => item.Apellido)</h5>
                    <p class="card-text font-weight-light mb-2">@Html.DisplayFor(modelItem => item.Direccion)</p>

                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.IdJugadores"><i class="fas fa-edit"></i> Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdJugadores"><i class="fas fa-trash-alt"></i> Delete</a>
                </div>
            </div>
        </a>
    </div>
    }
</div>
    

