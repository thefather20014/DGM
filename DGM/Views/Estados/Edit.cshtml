@model DGM.Models.Estado

@{
    ViewData["Title"] = "Edit";
}

<h1 class="alert alert-warning">Edit</h1>

<hr />
<div class="row">
    <div class="col-md-12 card p-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdEstado" />
            <div class="form-group col-12">
                <label asp-for="Descripion" class="control-label"></label>
                <input asp-for="Descripion" class="form-control" />
                <span asp-validation-for="Descripion" class="text-danger"></span>
            </div>
            <div class="form-group col-12">
                <label asp-for="FechaCreacion" class="control-label"></label>
                <input asp-for="FechaCreacion" class="form-control" />
                <span asp-validation-for="FechaCreacion" class="text-danger"></span>
            </div>
            <div class="form-group col-12">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-warning my-2" asp-action="Index"><i class="fas fa-arrow-circle-left"></i> Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
